<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XiaoZhiSharp_MauiApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <Label
                x:Name="LabQ"
                Text="{Binding QuestionMessae}"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <Label
                x:Name="LabA"
                Text="{Binding AnswerMessae}"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />

            <ImageButton
                Source="voice.png"
                Pressed="ImageButton_Pressed"
                Released="ImageButton_Released" 
                MaximumHeightRequest="60" MaximumWidthRequest="60" 
                MinimumHeightRequest="60" MinimumWidthRequest="60" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
